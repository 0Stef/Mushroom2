<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mushroom.cwb1.mushroom2.Challenges">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get highest speed"
        android:id="@+id/button_highest_speed"
        android:layout_marginBottom="192dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get highest acceleration"
        android:id="@+id/button_highest_acceleration"
        android:layout_marginTop="42dp"
        android:layout_alignTop="@+id/button_highest_speed" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get highest_altitude difference"
        android:id="@+id/button_highest_altitude_difference"
        android:layout_below="@+id/button_highest_acceleration"
        android:layout_alignLeft="@+id/button_highest_acceleration"
        android:layout_alignStart="@+id/button_highest_acceleration" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get highest temperature"
        android:id="@+id/button_highest_temperature"
        android:layout_below="@+id/button_highest_altitude_difference"
        android:layout_alignLeft="@+id/button_highest_altitude_difference"
        android:layout_alignStart="@+id/button_highest_altitude_difference" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get_longest_distance"
        android:id="@+id/button_longest_distance"
        android:layout_below="@+id/button_highest_temperature"
        android:layout_alignLeft="@+id/button_highest_temperature"
        android:layout_alignStart="@+id/button_highest_temperature" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Possible challenges"
        android:id="@+id/text_list_challenges"
        android:layout_above="@+id/button_highest_speed"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Current challenge:"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Choose your challenge below"
        android:id="@+id/chosen_challenge"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="19dp" />
</RelativeLayout>
