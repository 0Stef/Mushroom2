            <!--android:text="@string/ride_unit_speed"-->
            <!--android:id="@+id/maximumSpeedEenheid"-->
            <!--android:layout_alignBottom="@+id/maximumSpeed"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_alignParentEnd="true" />-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ride_default_value"
            android:id="@+id/distance"
            android:layout_alignLeft="@id/center"
            android:layout_alignStart="@id/center"
            android:layout_below="@id/textDistance"
            android:layout_marginBottom="@dimen/rideMeetwaardenMarginBottom"
            android:textColor="#000000"
            android:textSize="@dimen/rideMeetwaardenGrootte"
            android:textStyle="bold"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ride_unit_distance"
            android:id="@+id/distanceEenheid"
            android:layout_alignBottom="@+id/distance"
            android:layout_toRightOf="@+id/distance"
            android:layout_toEndOf="@+id/distance" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textElapsedTime"
            android:text="@string/ride_text_elapsed_time"
            android:layout_below="@id/distance"
            android:layout_alignLeft="@id/center"
            android:layout_alignStart="@id/center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time_default_value"
            android:id="@+id/elapsedTime"
            android:layout_alignLeft="@id/distance"
            android:layout_alignStart="@id/distance"
            android:layout_below="@id/textElapsedTime"
            android:layout_marginBottom="@dimen/rideMeetwaardenMarginBottom"
            android:textColor="#000000"
            android:textSize="@dimen/rideMeetwaardenGrootte"
            android:textStyle="bold"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            />

        <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="@string/ride_unit_time"-->
