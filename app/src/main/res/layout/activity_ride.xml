<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mushroom.cwb1.mushroom2.RideActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/center"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textCurrentSpeed"
            android:text="@string/ride_text_current_speed"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textDistance"
            android:text="@string/ride_text_distance"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@id/center"
            android:layout_alignStart="@id/center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ride_default_value"
            android:id="@+id/currentSpeed"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/textCurrentSpeed"
            android:textColor="#000000"
            android:layout_marginBottom="@dimen/rideMeetwaardenMarginBottom"
            android:textSize="@dimen/rideMeetwaardenGrootte"
            android:textStyle="bold"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ride_unit_speed"
            android:id="@+id/currentSpeedEenheid"
            android:layout_alignBottom="@+id/currentSpeed"
            android:layout_toRightOf="@+id/currentSpeed"
            android:layout_toEndOf="@+id/currentSpeed" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textAverageSpeed"
            android:text="@string/ride_text_average_speed"
            android:layout_below="@id/currentSpeed"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ride_default_value"
            android:id="@+id/averageSpeed"
            android:layout_below="@id/textAverageSpeed"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="@dimen/rideMeetwaardenMarginBottom"
            android:textColor="#000000"
            android:textSize="@dimen/rideMeetwaardenGrootte"
            android:textStyle="bold"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ride_unit_speed"
            android:id="@+id/averageSpeedEenheid"
            android:layout_alignBottom="@+id/averageSpeed"
            android:layout_toRightOf="@+id/averageSpeed"
            android:layout_toEndOf="@+id/averageSpeed" />

        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="@string/ride_default_value"-->
            <!--android:id="@+id/maximumSpeed"-->
            <!--android:textColor="#000000"-->
            <!--android:textSize="@dimen/rideMeetwaardenGrootte"-->
            <!--android:textStyle="bold"-->
            <!--android:layout_alignParentTop="true"-->
            <!--android:layout_toLeftOf="@+id/maximumSpeedEenheid"-->
            <!--android:layout_toStartOf="@+id/maximumSpeedEenheid"-->
