<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mushroom.cwb1.mushroom2.RideActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rideStandaardmeetwaarde"
            android:id="@+id/currentSpeed"
            android:layout_marginBottom="@dimen/rideMeetwaardenMarginBottom"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#000000"
            android:textSize="@dimen/rideMeetwaardenGrootte"
            android:textStyle="bold"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/eenheidSnelheid"
            android:id="@+id/currentSpeedEenheid"
            android:layout_alignBottom="@+id/averageSpeed"
            android:layout_toRightOf="@+id/currentSpeed"
            android:layout_toEndOf="@+id/currentSpeed" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rideStandaardmeetwaarde"
            android:id="@+id/averageSpeed"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/rideMeetwaardenMarginBottom"
            android:textColor="#000000"
            android:textSize="@dimen/rideMeetwaardenGrootte"
            android:textStyle="bold"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/eenheidSnelheid"
            android:id="@+id/averageSpeedEenheid"
            android:layout_alignBottom="@+id/averageSpeed"
            android:layout_toRightOf="@+id/averageSpeed"
            android:layout_toEndOf="@+id/averageSpeed" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rideStandaardmeetwaarde"
            android:id="@+id/maximumSpeed"
            android:textColor="#000000"
            android:textSize="@dimen/rideMeetwaardenGrootte"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/maximumSpeedEenheid"
            android:layout_toStartOf="@+id/maximumSpeedEenheid"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/eenheidSnelheid"
            android:id="@+id/maximumSpeedEenheid"
            android:layout_alignBottom="@+id/maximumSpeed"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />






        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rideStandaardmeetwaarde"
            android:id="@+id/currentAcceleration"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/currentSpeed"
            android:textColor="#000000"
            android:textSize="@dimen/rideMeetwaardenGrootte"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/rideMeetwaardenMarginBottom"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/eenheidVersnelling"
            android:id="@+id/currentAccelerationEenheid"
            android:layout_alignBottom="@+id/averageAcceleration"
            android:layout_toRightOf="@+id/currentAcceleration"
            android:layout_toEndOf="@+id/currentAcceleration" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rideStandaardmeetwaarde"
            android:id="@+id/averageAcceleration"
            android:layout_below="@id/averageSpeed"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/rideMeetwaardenMarginBottom"
            android:textColor="#000000"
            android:textSize="@dimen/rideMeetwaardenGrootte"
            android:textStyle="bold"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/eenheidVersnelling"
            android:id="@+id/averageAccelerationEenheid"
            android:layout_alignBottom="@+id/averageAcceleration"
            android:layout_toRightOf="@+id/averageAcceleration"
            android:layout_toEndOf="@+id/averageAcceleration" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rideStandaardmeetwaarde"
            android:id="@+id/maximumAcceleration"
            android:textColor="#000000"
            android:textSize="@dimen/rideMeetwaardenGrootte"
            android:textStyle="bold"
            android:layout_toLeftOf="@+id/maximumAccelerationEenheid"
            android:layout_toStartOf="@+id/maximumAccelerationEenheid"
            android:layout_alignBottom="@id/averageAcceleration"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/eenheidVersnelling"
            android:id="@+id/maximumAccelerationEenheid"
            android:layout_alignBottom="@+id/maximumAcceleration"
            android:layout_toRightOf="@+id/maximumSpeed"
            android:layout_toEndOf="@+id/maximumSpeed" />






        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rideStandaardmeetwaarde"
            android:id="@+id/distance"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/averageAcceleration"
            android:layout_marginBottom="@dimen/rideMeetwaardenMarginBottom"
            android:textColor="#000000"
            android:textSize="@dimen/rideMeetwaardenGrootte"
            android:textStyle="bold"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/eenheidAfstand"
            android:id="@+id/distanceEenheid"
            android:layout_alignBottom="@+id/distance"
            android:layout_toRightOf="@+id/distance"
            android:layout_toEndOf="@+id/distance" />






        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rideStandaardmeetwaarde"
            android:id="@+id/elapsedTime"
            android:layout_below="@id/currentAcceleration"
            android:textColor="#000000"
            android:textSize="@dimen/rideMeetwaardenGrootte"
            android:textStyle="bold"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/eenheidTijd"
            android:id="@+id/elapsedTimeEenheid"
            android:layout_alignBottom="@+id/elapsedTime"
            android:layout_toRightOf="@+id/elapsedTime"
            android:layout_toEndOf="@+id/elapsedTime" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/elapsedTime"
            android:text="@string/getstartedch"
            android:layout_marginTop="10dp"
            android:onClick="challengeButton"
            android:id="@+id/challengebutton"
            />

        <Spinner
            android:id="@+id/moeilijkheidsgraad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/elapsedTime"
            android:layout_toRightOf="@id/challengebutton"
            android:layout_toEndOf="@id/challengebutton"
            android:layout_alignBottom="@id/challengebutton"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/uitleg"
            android:layout_below="@id/elapsedTime"
            android:layout_marginTop="20dp"
            android:text="Test"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/wachten"
            android:layout_below="@id/elapsedTime"
            android:layout_marginTop="20dp"
            android:textColor="#000000"
            android:textSize="@dimen/rideMeetwaardenGrootte"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/challengebutton"
            android:id="@+id/challenge1"
            android:text="Test"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/challenge1"
            android:id="@+id/challenge2"
            android:text="Test"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/succes"
            android:layout_below="@id/challenge1"
            android:textSize="40sp"
            android:id="@+id/succes"
            android:layout_marginTop="15dp"/>










    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/startrecordingbutton"
        android:textSize="15sp"
        android:background="#14ff2d"
        android:gravity="center"
        android:textStyle="bold"
        android:padding="10dp"
        android:onClick="startrecording" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Resume"
                android:id="@+id/resumerecordingbutton"
                android:textSize="15sp"
                android:background="#14ff2d"
                android:gravity="center"
                android:textStyle="bold"
                android:padding="10dp"
                android:onClick="resumerecording"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pause"
                android:id="@+id/pauserecordingbutton"
                android:textSize="15sp"
                android:background="#ffc600"
                android:gravity="center"
                android:textStyle="bold"
                android:padding="10dp"
                android:onClick="pauserecording" />

        </RelativeLayout>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Stop"
            android:id="@+id/stoprecordingbutton"
            android:textSize="15sp"
            android:background="#ff0046"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="10dp"
            android:onClick="stoprecording"
            android:layout_weight="1"/>

    </LinearLayout>
    </RelativeLayout>


    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/map"
        tools:context="com.mushroom.cwb1.mushroom2.RideActivity"
        android:name="com.google.android.gms.maps.SupportMapFragment" />




</LinearLayout>
