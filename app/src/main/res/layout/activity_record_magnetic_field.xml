 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="cwb1.mushroom.com.mushroom.RecordMagneticField">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/magnetic_field"
        android:text="@string/magnetic_winddirections"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/acceleration_button_start"
        android:id="@+id/start_button"
        android:onClick="clickStart"
        android:layout_below="@id/magnetic_field"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/acceleration_button_stop"
        android:id="@+id/stop_button"
        android:onClick="clickStop"
        android:layout_alignTop="@id/start_button"
        android:layout_toRightOf="@id/start_button"
        android:layout_toEndOf="@id/start_button"/>

</RelativeLayout>
